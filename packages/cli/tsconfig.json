{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "exclude": ["__tests__/**/*", "dist/**/*", "jest.config.ts"]
}
