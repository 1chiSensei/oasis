{
  "name": "@oasis-sh/cli",
  "version": "1.0.3",
  "description": "The Official CLI for dev.oasis.sh.",
  "main": "src/index.ts",
  "scripts": {
    "start": "./bin/oasis",
    "install": "yarn build",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist/*",
    "prepare": "yarn build",
    "prepublishOnly": "yarn test",
    "test": "yarn build && jest --maxWorkers=50%",
    "test:watch": "jest --watch --maxWorkers=25%",
    "test:ci": "yarn build && jest --runInBand"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.14.5",
    "@types/jest-json-schema": "^2.1.3",
    "@types/node-emoji": "^1.8.1",
    "@types/rimraf": "^3.0.0",
    "@types/yargs": "^17.0.0",
    "jest": "^27.0.5",
    "jest-json-schema": "^5.0.0",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "graphql-request": "^3.4.0",
    "node-emoji": "^1.10.0",
    "typescript": "4.3.4",
    "yargs": "^17.0.1"
  },
  "jest": {
    "setupFiles": [
      "helper.ts"
    ],
    "testEnvironment": "node"
  },
  "bin": {
    "oasis": "./bin/oasis"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Bereket Semagn",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oasis-sh/oasis.git"
  },
  "bugs": {
    "url": "https://github.com/oasis-sh/oasis/issues"
  },
  "homepage": "https://github.com/oasis-sh/oasis#readme"
}
