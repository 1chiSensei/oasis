{
  "name": "oasis",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@types/jest": "^26.0.22",
    "all-contributors-cli": "^6.20.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test:no-watch"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "defaultScope": "global"
    }
  },
  "scripts": {
    "prepare": "husky install",
    "commit": "cz",
    "contrib:add": "all-contributors add",
    "contrib:build": "all-contributors generate",
    "dev:web": "yarn workspace @oasis/web dev",
    "dev:api": "yarn workspace @oasis/api watch",
    "dev:gql:tsc": "yarn workspace client-gql tsc:watch",
    "dev:gql:gen": "yarn workspace client-gql gen:watch",
    "dev": "concurrently -p \" {name} \" -n \"Web,API,GQL,GQL\" -c \"bgBlue,bgCyan,bgGreen,bgGreen\" \"yarn:dev:web\" \"yarn:dev:api\" \"yarn:dev:gql:gen\" \"yarn:dev:gql:tsc\""
  },
  "dependencies": {
    "apollo-server-micro": "^2.23.0",
    "concurrently": "^6.0.2",
    "firebase-admin": "^9.6.0"
  }
}
